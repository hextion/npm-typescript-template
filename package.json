{
  "name": "npm-typescript-template",
  "version": "0.0.1",
  "description": "npm-typescript-template",
  "scripts": {
    "check-types": "tsc --noEmit",
    "format": "prettier --check \"**/*.{js,ts,md,json}\"",
    "format-fix": "npm run format -- --write",
    "lint": "eslint --ext .js,.ts --max-warnings 0 --no-ignore src",
    "lint-fix": "npm run lint -- --fix"
  },
  "author": "Salavat Gizatov <100ishundred@gmail.com> (https://github.com/hextion)",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "lint-staged": "^11.2.0",
    "prettier": "2.4.1",
    "simple-git-hooks": "^2.6.1",
    "typescript": "~4.4.3"
  }
}
